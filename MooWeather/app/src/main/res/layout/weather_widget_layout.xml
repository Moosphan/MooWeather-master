<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/weather_widget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:paddingRight="12dp"
            android:textColor="@color/white"
            android:text="12月12日"/>
        <TextView
            android:id="@+id/weather_widget_week_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:text="星期五"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/weather_widget_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/mostly_cloudy"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/weather_widget_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginRight="18dp"
            android:textColor="@color/white"
            android:text="16℃"/>
        <TextView
            android:id="@+id/weather_widget_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:text="上海"/>
    </LinearLayout>
</LinearLayout>