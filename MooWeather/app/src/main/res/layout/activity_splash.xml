<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moos.weather.ui.activity.SplashActivity">

    <ImageView
        android:id="@+id/splash_center_point_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:src="@mipmap/icon_inside_point"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/splash_outside_circle_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:visibility="gone"
        android:src="@mipmap/icon_outside_circle"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/splash_app_name_view"
        android:layout_width="120dp"
        android:layout_height="23dp"
        android:visibility="gone"
        android:src="@mipmap/splash_tminstore"
        android:layout_below="@+id/splash_outside_circle_view"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/splash_lottie_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"/>

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"/>

    <com.hanks.htextview.fade.FadeTextView
        android:id="@+id/splash_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#333333"
        android:letterSpacing="0.05"
        android:lineSpacingMultiplier="1.4"
        android:text="@string/splash_words"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"/>

</RelativeLayout>
